#install node.js
curl -sL https://deb.nodesource.com/setup_12.x | sudo -E bash -
sudo apt-get install -y nodejs
#create app directory
mkdir /app
cd /app
sudo npm init
#install express.js
sudo npm install express --save
sudo npm install pg --save
# import server files #
wget https://raw.githubusercontent.com/vitooh/gcp_test/master/serverpg.js
wget https://raw.githubusercontent.com/vitooh/gcp_test/master/queries.js
wget https://raw.githubusercontent.com/vitooh/gcp_test/master/api.js
